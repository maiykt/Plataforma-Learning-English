@model Application.ViewModels.SaveProductViewModel



@{
    ViewData["Title"] = "Eliminar Clase";
}
<link rel="stylesheet" href="~/css1/theme.css">
<div class="row">
    
    <div class="col-6 offset">
        <div class="card">
            <div class="card-header bg-danger text-light">
                <h4>Esta seguro que desea eliminar esta clase @Model.Name?</h4>


            </div>
            <div class="card-body">
                <form method="post" asp-controller="Product" asp-action="DeletePost">

                    <input type="hidden" asp-for="Id"/>
                    <button type="submit" class="btn btn-danger">Eliminar</button>
                    <a asp-controller="Product" asp-action="Index" class="btn btn-warning">Cancelar</a>

                </form>
            </div>
        </div> 

    </div>


</div>